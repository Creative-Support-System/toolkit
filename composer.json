{
    "name": "creative-support-system/coding-style",
    "type": "composer-plugin",
    "description": "Coding Style for CodeIgniter",
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-tokenizer": "*",
        "composer-plugin-api": "^2.2",
        "friendsofphp/php-cs-fixer": "^3.6",
        "mikey179/vfsstream": "^1.6",
        "nexusphp/cs-config": "^3.4",
        "nexusphp/tachycardia": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.13.3",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.23"
    },
    "require-dev": {
        "composer/composer": "^2.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "CodeIgniter\\CodeIgniterStyle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeIgniter\\CodeIgniterStyle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
